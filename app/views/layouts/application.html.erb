<!DOCTYPE html>
<html>
  <head>
    <title>RocketElevators</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', media: 'all' %>
		<script>var plugin_path = '/assets/plugins/';</script>
  </head>

  <body>
    <!-- wrapper -->
		
    <%= render 'parts/header' %>

    <% unless flash.empty? %>
   <script type="text/javascript">
      <% flash.each do |f| %>
        <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
   	    toastr['<%= type %>']('<%= f[1] %>');
      <% end %>
   </script>
    <% end %>
        
    <%= yield %>
		
    <%= render 'parts/footer' %>

	<!-- /wrapper -->
    
  </body>
</html>
